generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model	User {
	id			Int			@id @default(autoincrement()) //change to string ?
	id42		Int?		@unique //enlever le ?
 
	name		String		@unique
	gameProfile	GameProfile?
	
	createdAt	DateTime	@default(now())
	updatedAt	DateTime	@updatedAt
	
	@@map("users")
}

model	GameProfile {
	userId		Int		@unique
	user		User	@relation(fields: [userId], references: [id])

	wins		Int
	loss		Int	

	@@map("gameProfile")
}
